@model IEnumerable<HackerRank.Models.Groups.Group>

@{
    ViewData["Title"] = "Ranking";
}

<h1>Ranking</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Group name")
            </th>
            <th>
                @Html.DisplayName("DailyRating")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @string.Format("{0:0.00}", item.GroupRating)
                </td>
            </tr>
        }
    </tbody>
</table>