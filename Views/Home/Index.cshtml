@model IEnumerable<HackerRank.ViewModels.TopFiveViewModel>

@{
    ViewData["Title"] = "Ranking";
}
<div class="background">
<div class="container">
    <div class="row text-center">
        <div class="col-9">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>

                            </th>
                            <th>
                                @Html.DisplayName("Username")
                            </th>
                            <th>
                                @Html.DisplayName("Commits")
                            </th>
                            <th>
                                @Html.DisplayName("Issues created")
                            </th>
                            <th>
                                @Html.DisplayName("Issues solved")
                            </th>
                            <th>
                                @Html.DisplayName("Merge requests")
                            </th>
                            <th>
                                @Html.DisplayName("Comments")
                            </th>
                            <th>
                                @Html.DisplayName("Daily rating")
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (item.DailyRating != 0)
                            {
                                <tr>
                                    <td>
                                        <img src="~/profileImg/@item.ProfileImage" asp-append-version="true" style="height:50px" />
                                    </td>
                                    <td>
                                        <a class="nav-link text-info px-0 py-0 my-0 mx-0" asp-area="" asp-controller="User" asp-action="Details" asp-route-id="@item.UserName">@item.UserName</a>
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.Commits)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.IssuesCreated)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.IssuesSolved)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.MergeRequest)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.Comments)
                                    </td>
                                    <td>
                                        @string.Format("{0:0.00}", item.DailyRating)
                                    </td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>

            <div class="table-responsive">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Name")
                            </th>
                            <th>
                                @Html.DisplayName("Commits")
                            </th>
                            <th>
                                @Html.DisplayName("Issues created")
                            </th>
                            <th>
                                @Html.DisplayName("Issues solved")
                            </th>
                            <th>
                                @Html.DisplayName("Merge requests")
                            </th>
                            <th>
                                @Html.DisplayName("Comments")
                            </th>
                            <th>
                                @Html.DisplayName("Daily rating")
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.GroupRating != 0)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.GroupName)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.CommitsDaily)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.IssuesCreatedDaily)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.IssuesSolvedDaily)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.MergeRequestsDaily)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.CommentsDaily)
                                    </td>
                                    <td>
                                        @string.Format("{0:0.00}", item.GroupRating)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayName("Name")
                            </th>
                            <th>
                                @Html.DisplayName("Prestige")
                            </th>
                            <th>
                                @Html.DisplayName("Level")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.UserLevel != null)
                            {
                                <tr>
                                    <td>
                                        <img src="~/profileImg/@item.UserLevel.User.ProfileImage" asp-append-version="true" style="height:50px" />
                                    </td>
                                    <td>
                                        <a class="nav-link text-info px-0 py-0 my-0 mx-0" asp-area="" asp-controller="User" asp-action="Details" asp-route-id="@item.UserLevel.User.UserName">@item.UserLevel.User.UserName</a>
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.UserLevel.PrestigeLevel)
                                    </td>
                                    <td>
                                        @string.Format("{0:0}", item.UserLevel.Level.LevelName)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-3 wrapper">
            <article class="live_feed">
                <p class="pulsate">Live feed </p>
                <ul id="live_feed" >
                    <li>Hejjjj</li>
                </ul>
                <ul><li>hrrrr</li></ul>
                
                <div class="box">
                    @* <div></div> *@
                    <div class="bild">
                        @foreach (var item in Model){
                            @if (item.ProfileImage != null){
                            <img src="~/profileImg/@item.ProfileImage" asp-append-version="true" style="width:100%" />
                        }}          
                    </div>
                    <div id="delay" class="bild" style="--order: 1">
                        @foreach (var item in Model){
                            @if (item.ProfileImage != null){
                            <img src="~/profileImg/@item.ProfileImage" asp-append-version="true" style="width:100%" />
                        }}          
                    </div>
                    <div id="delay" class="bild" style="--order: 2">
                        @foreach (var item in Model){
                            @if (item.ProfileImage != null){
                            <img src="~/profileImg/@item.ProfileImage" asp-append-version="true" style="width:100%" />
                        }}          
                    </div>
                    
                    
                </div>
                
            </article>
            
        </div>
        @* <div class="bild2">
            <img src="..\img\logo.png" alt="">
        </div>
        <div class="bild2 rotate">
            @foreach (var item in Model){
                 @if (item.ProfileImage != null){
                <img src="~/profileImg/@item.ProfileImage" asp-append-version="true" style="width:100%" />
            }}          
        </div> *@
    </div>
</div>
</div>
