                <img src="~/img/log/sign-out-option_icon-icons.com_73413.png" title="log out"/></button>
               
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><img src="~/img/log/log_in_icon_128822.png" title="log in"/></a>
        </li>
    }
