    @if (SignInManager.IsSignedIn(User))
    {        

    <li class="nav-item dropdown">
        <a class="nav-link text-dark " asp-area="" asp-controller="User" asp-action="Details" asp-route-id="@User.Identity.Name">Hello @User.Identity.Name!<img src="~/img/log/name_user_3716.png" class="imageprofile " /></a>
        <div class="dropdown-content">
