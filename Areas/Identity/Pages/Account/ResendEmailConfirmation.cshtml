@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-sm-12 col-md-6 ">
        <section class="form-section-forget-password ">
            <form method="post" class="form-login">
                <h2 class="h1-style">@ViewData["Title"]</h2>
                <h4>Enter your email.</h4>
                <div class="form-group row style-For-Password">
                    <label class="col-md-12 control-label" asp-for="Input.Email"></label>
                    <div class="col-md-6 inputGroupContainer">
                        <div class="input-group">
                            <img class="loginNameAvator" src="~/img/avatar7.png" alt="">
                            <input asp-for="Input.Email" placeholder="Email" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4 inputGroupContainer center">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row form-group d-flex flex-column align-items-center text-center style-For-Password-btn">
                    <button type="submit" class="btn btn-primary btn-lg btn-block col-md-4">Resend</button>
                </div>
            </form>

        </section>
    </div>
    <div class="col-md-3"></div>

</div>

